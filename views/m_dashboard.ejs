<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manager Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    /* General Styling */
    body {
      background-color: #F9F9F9;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      color: #333;
    }

    /* Header Styling */
    .header {
      background-color: #3B7A57; /* Professional green */
      color: #FFF;
      padding: 15px 0;
      text-align: center;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      display: flex;
      justify-content: center; /* Center the header content horizontally */
      align-items: center; /* Vertically center the header content */
    }

    .header-content {
      text-align: center;
    }

    .header-title {
      font-size: 28px;
      margin: 0;
      font-weight: bold;
    }

    .slogan {
      font-size: 14px;
      margin-top: 2px;
      font-style: italic;
      color: #FFDAB9;
    }

    .logout-btn {
      color: #FFF;
      background-color: transparent;
      border: none;
      font-size: 18px;
      cursor: pointer;
      padding: 10px 15px;
      transition: background-color 0.3s;
      position: absolute;
      right: 20px; /* Position the logout button to the right */
    }

    .logout-btn:hover {
      background-color: #F26D5B; /* Pink hover effect */
    }
    /* Main Content Styling */
    .container {
      padding: 20px;
      max-width: 1200px;
      margin: auto;
    }

    h2 {
      font-size: 22px;
      color: #4F8F8F;
      margin-bottom: 15px;
      border-bottom: 2px solid gray;
      display: inline-block;
    }

    /* Widgets Section */
    .widgets {
      display: flex;
      justify-content: space-between;
      gap: 20px;
      margin-bottom: 30px;
      margin-top: 100px;
    }

    .widget {
      background-color: #FFF;
      border: 1px solid #E0E0E0;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
      flex: 1;
      min-width: 250px;
    }

    .widget h3 {
      font-size: 18px;
      color: #666;
      margin-bottom: 10px;
    }

    .widget p {
      font-size: 24px;
      color: #F26D5B;
      font-weight: bold;
    }

    .widget i {
      font-size: 40px;
      color: #F26D5B;
      margin-bottom: 15px;
    }

    /* Notifications Section */
    .notifications ul {
      list-style: none;
      padding: 0;
    }

    .notifications li {
      background-color: whitesmoke;
      border: 1px solid #E0E0E0;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Change icon color */
.notifications li i {
  color: #F26D5B;  /* New icon color (soft pink) */
  margin-right: 15px;  /* Space between icon and text */
  font-size: 22px;     /* Adjust icon size */
}

    /* Quick Actions */
    .quick-actions ul {
      list-style: none;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .quick-actions a {
      text-decoration: none;
      color: #F26D5B;
      background-color: #FFF;
      padding: 35px 45px;
      border: 1px solid #E0E0E0;
      border-radius: 10px;
      display: flex;
      align-items: center;
      gap: 15px;
      transition: box-shadow 0.3s, background-color 0.3s;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      font-size: 16px;
    }

    .quick-actions a:hover {
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
      background-color: #F0F0F0;
    }

    .quick-actions i {
      font-size: 20px;
      color: #3B7A57;
    }

    /* Footer Styling */
    footer {
      background-color: #3B7A57;
      color: #FFF;
      text-align: center;
      padding: 15px;
      margin-top: 30px;
      box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
    }

    footer p {
      margin: 0;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="header-content">
      <div class="header-title">WORKSPY</div>
      <div class="slogan">"Empowering Workforces, Simplifying Lives"</div>
    </div>
    <!-- Logout button -->
    <button class="logout-btn" onclick="window.location.href='/logout'">
      <i class="fas fa-sign-out-alt"></i> Logout
    </button>
  </header>
  

  <!-- Main Container -->
  <div class="container">
    <!-- Widgets Section -->
    <section class="widgets">
      <div class="widget">
        <i class="fas fa-briefcase"></i>
        <h3>Total Projects</h3>
        <p><%= metrics.totalProjects %></p>
      </div>
      <div class="widget">
        <i class="fas fa-tasks"></i>
        <h3>Active Tasks</h3>
        <p><%= metrics.activeTasks %></p>
      </div>
      <div class="widget">
        <i class="fas fa-check-circle"></i>
        <h3>Pending Approvals</h3>
        <p><%= metrics.pendingApprovals %></p>
      </div>
    </section>

    <!-- Notifications Section -->
    <section class="notifications">
      <h2>Notifications</h2>
      <h3>Pending Leave Requests</h3>
      <ul>
        <% notifications.pendingLeaveRequests.forEach(request => { %>
          <li>
            <i class="fas fa-envelope"></i> <%= request.reason %> (Status: <%= request.status %>)
          </li>
        <% }) %>
      </ul>

      <h3>Upcoming Project Deadlines</h3>
      <ul>
        <% notifications.upcomingDeadlines.forEach(deadline => { %>
          <li>
            <i class="fas fa-calendar-alt"></i> <%= deadline.project_name %> (Deadline: <%= deadline.deadline %>)
          </li>
        <% }) %>
      </ul>
    </section>

    <!-- Quick Actions Section -->
    <section class="quick-actions">
      <h2>Quick Actions</h2>
      <ul>
        <li><a href="/m-projects"><i class="fas fa-folder"></i> View Projects</a></li>
        <li><a href="/m-tasks"><i class="fas fa-tasks"></i> View Tasks</a></li>
        <li><a href="/manager-users"><i class="fas fa-users"></i> View Users</a></li>
        <li><a href="/m_timesheets"><i class="fas fa-clock"></i> Review Timesheets</a></li>
        <li><a href="/view-reports"><i class="fas fa-file-alt"></i> View Reports</a></li>
      </ul>
    </section>
  </div>

  <!-- Footer -->
  <footer>
    <p>&copy; 2024 Manager Dashboard. All Rights Reserved to 'M-A-L'.</p>
  </footer>
</body>
</html>
